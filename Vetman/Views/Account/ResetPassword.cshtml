@model Core.ViewModels.PasswordResetViewmodel
@{
    ViewData["Title"] = "Reset Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="page-wrapper">
    <div class="content container-fluid">
        <div class="row">
            <div class="col-md-6 offset-md-3">

                <!-- Page Header -->
                <div class="page-header">
                    <div class="row">
                        <div class="col-sm-12">
                            <h3 class="page-title">Reset Password</h3>
                        </div>
                    </div>
                </div>
                @if (Model != null)
                {
                    @Html.HiddenFor(t => t.Token, new { @id = "token" });
                }
                <div class="form-group">
                    <label>New password</label>
                    <input id="password" type="password" class="form-control" required/>
                </div>
                <div class="form-group">
                    <label>Confirm password</label>
                    <input id="confirmPassword" type="password" class="form-control" required/>
                </div>
                <div class="submit-section">
                    <button class="btn btn-primary submit-btn" type="submit" onclick="resetPassword()">Update Password</button>
                </div>
            </div>
        </div>
    </div>
    <!-- /Page Content -->
</div>
<!-- /Page Wrapper -->

