@{
	Layout = ViewBag.Layout;
	ViewData["Title"] = "Add Patient";
}

<!-- Page Wrapper -->
<div class="page-wrapper">

	<!-- Page Content -->
	<div class="content container-fluid">

		<div class="card tab-box">
			<div class="row user-tabs">
				<div class="col-lg-12 col-md-12 col-sm-12 line-tabs">
					<ul class="nav nav-tabs nav-tabs-bottom">

						<li class="nav-item"><a href="#new_user_patient" data-toggle="tab" class="nav-link active">Add Patient For New Customer </a></li>
						<li class="nav-item"><a href="#existing_user_patient" data-toggle="tab" class="nav-link ">Add Patient For Existing Customer</a></li>
					</ul>
				</div>
			</div>
		</div>

		<div class="tab-content">


			<!-- New Client Tab -->
			<div id="new_user_patient" class="pro-overview tab-pane fade show active">
				<div class="card">
					<div class="card-body">
						<h3 class="card-title"> Basic Customer Information</h3>
						<div class="row">

							<div class="col-sm-4">
								<div class="form-group">
									<label class="col-form-label">First Name <span class="text-danger">*</span></label>
									<input type="text" class="form-control" placeholder="N/A" id="FnameP" required>
								</div>
							</div>

							<div class="col-sm-4">
								<div class="form-group">
									<label class="col-form-label">Last Name <span class="text-danger">*</span></label>
									<input type="text" class="form-control" placeholder="N/A" id="LnameP" required>
								</div>
							</div>
							<div class="col-sm-4">
								<div class="form-group">
									<label class="col-form-label">Profession </label>
									<input type="text" class="form-control" placeholder="N/A" id="profession" >
								</div>
							</div>

							<div class="col-sm-4">
								<div class="form-group">
									<label class="col-form-label">Gender <span class="text-danger">*</span></label>
									<select id="cusGenderId" asp-items="@(new SelectList(ViewBag?.Gender  ,"Id", "Name" ))" class="form-control"> </select>
								</div>
							</div>

							<div class="col-sm-4">
								<div class="form-group">
									<label class="col-form-label">Phone Number<span class="text-danger">*</span></label>
									<input type="number" class="form-control" placeholder="N/A" id="phoneNumberP" required>
								</div>
							</div>

							<div class="col-sm-4">
								<div class="form-group">
									<label class="col-form-label">Email <span class="text-danger"> Optional</span></label>
									<input type="email" class="form-control" placeholder="--Optional--" id="emailP">
								</div>
							</div>

							<div class="col-sm-4">
								<div class="form-group">
									<label class="col-form-label">Address <span class="text-danger">*</span></label>
									<input type="text" class="form-control" placeholder="N/A" id="addressP" required>
								</div>
							</div>
						</div>

						<hr>
						<h3 class="card-title"> Patient Information</h3>
						<div class="row">

							<div class="col-sm-4">
								<div class="form-group">
									<label class="col-form-label">Patient Name <span class="text-danger">*</span></label>
									<input type="text" class="form-control"  placeholder="N/A" id="petName" required>
								</div>
							</div>

							<div class="col-sm-4">
								<div class="form-group">
									<label class="col-form-label"> Patient Specie <span class="text-danger">*</span></label>
									<select id="petSpec" asp-items="@(new SelectList(ViewBag?.Species  ,"Id", "NameToString" ))" class="form-control makeFilter">
										<option data-value="0">-- Select--</option>	
									</select>
								</div>
							</div>

							<div class="col-sm-4">
								<div class="form-group">
									<label class="col-form-label">Date Of Birth <span class="text-danger">*</span></label>
									<input type="date" class="form-control" placeholder="N/A" id="petBirth">
								</div>
							</div>

							<div class="col-sm-4">
								<div class="form-group">
									<label class="col-form-label">Gender <span class="text-danger">*</span></label>
									<select id="petGenderId" asp-items="@(new SelectList(ViewBag?.Gender  ,"Id", "Name" ))" class="form-control makeFilter"> </select>
								</div>
							</div>

							<div class="col-sm-4">
								<div class="form-group">
									<label class="col-form-label">Breed <span class="text-danger">*</span></label>
									<select id="breedId" class="form-control makeFilter"> </select>
								</div>
							</div>

							<div class="col-sm-4">
								<div class="form-group">
									<label class="col-form-label">Colour </label>
									<input type="text" class="form-control"  placeholder="N/A" id="colour" required>
								</div>
							</div>

							<div class="col-sm-4">
								<div class="form-group">
									<label class="col-form-label"> Special Marking <span class="text-danger">*</span></label>
									<input type="text" class="form-control"  placeholder="N/A" id="petMarking" required>
								</div>
							</div>

							<div class="col-sm-4">
								<div class="form-group">
									<label class="col-form-label">Patient Image</label>
									<div class="form-group">
										<input type="file" class="form-control" data-buttontext="Choose File" data-icon="false" data-classbutton="btn btn-default"
											   accept="image/png, image/gif, image/jpg, image/jpeg" data-classinput="form-control inline input-s" name="receipt" id="patientImg">
									</div>
								</div>
							</div>
							@*<div class="col-sm-4">
								<div class="form-group">
									<label class="col-form-label text-success"> Initial Deposit Amount <small class="text-muted">per month</small></label>
									<div class="input-group">
										<div class="input-group-prepend">
											<span class="input-group-text">&#x20A6;</span>
										</div>
										<input type="number" class="form-control" placeholder="Type your amount" id="amount" required>
									</div>
								</div>
							</div>*@

						</div>

						<div class="submit-section">
							<button class="btn btn-primary submit-btn" onclick="NewPatient_Customer()" type="submit">Create</button>
						</div>
					</div>
				</div>
			</div>
			<!-- /New Client Tab -->

			<!-- Existing Client Tab -->
			<div class="tab-pane fade" id="existing_user_patient">
				<div class="card">
					<div class="card-body">
						<h3 class="card-title"> Basic Client Information</h3>
						<div class="row">

							<div class="col-sm-4">
								<div class="form-group">
									<div>
										<label class="col-form-label">Clients <span class="text-danger">*</span></label>
									</div>
									<div>
										<select style="width:100%" id="existCustomerid" asp-items="@(new SelectList(ViewBag?.Customers  ,"Id", "FullName" ))" class="form-control makeFilter"> </select>
									</div>
								</div>
							</div>

						</div>

						<hr>
						<h3 class="card-title"> Patient Information</h3>
						<div class="row">
								<div class="col-sm-4">
									<div class="form-group">
										<label class="col-form-label">Patient Name <span class="text-danger">*</span></label>
										<input type="text" class="form-control" placeholder="N/A" id="petNameExisting" required>
									</div>
								</div>

								<div class="col-sm-4">
									<div class="form-group">
									<div>
										<label class="col-form-label">Patient Specie <span class="text-danger">*</span></label>
									</div>
									<div>
										<select style="width:100%" id="petSpecExisting" asp-items="@(new SelectList(ViewBag?.Species  ,"Id", "NameToString" ))" class="form-control makeFilter">
											<option data-value="0">-- Select--</option>
										</select>
									</div>
									</div>
								</div>

								<div class="col-sm-4">
									<div class="form-group">
										<label class="col-form-label">Date Of Birth <span class="text-danger">*</span></label>
										<input type="date" class="form-control" placeholder="N/A" id="petBirthExisting">
									</div>
								</div>


								<div class="col-sm-4">
									<div class="form-group">
										<div
										<label class="col-form-label">Gender <span class="text-danger">*</span></label>
										</div>
										<div>
										<select style="width:100%" id="petGenderExisting" asp-items="@(new SelectList(ViewBag?.Gender  ,"Id", "Name" ))" class="form-control makeFilter"> </select>
										</div>
										
									</div>
								</div>

								<div class="col-sm-4">
									<div class="form-group">
										<div>
											<label class="col-form-label">Breed <span class="text-danger">*</span></label>
										</div>
										<div>
										<select style="width:100%" id="breedIdExisting" class="form-control makeFilter"> </select>
										</div>
									
									</div>
								</div>

								<div class="col-sm-4">
									<div class="form-group">
										<label class="col-form-label">Colour </label>
									<input type="text" class="form-control" placeholder="N/A" id="colourExisting" required>
									</div>
								</div>

								<div class="col-sm-4">
									<div class="form-group">
										<label class="col-form-label"> Special Marking <span class="text-danger">*</span></label>
										<input type="text" class="form-control" placeholder="N/A" id="markingExisting" required>
									</div>
								</div>

							<div class="col-sm-4">
								<div class="form-group">
									<label class="col-form-label">Patient Image</label>
									<div class="form-group">
										<input type="file" class="form-control" data-buttontext="Choose File" data-icon="false" data-classbutton="btn btn-default"
											   accept="image/png, image/gif, image/jpg, image/jpeg" data-classinput="form-control inline input-s" name="receipt" id="patientImgExisting">
									</div>
								</div>
							</div>
						</div>

						<div class="submit-section">
							<button class="btn btn-primary submit-btn" onclick="existingPatient_Customer()" type="submit">Create</button>
						</div>
					</div>
				</div>
			</div>
			<!-- /Existing Client Tab -->

		</div>
	</div>
	<!-- /Page Content -->
</div>
<!-- /Page Wrapper -->
