@model IEnumerable<Core.ViewModels.StaffViewModel>
@{
	ViewData["Title"] = "Roles";
	Layout = ViewBag.Layout;
}

<!-- Page Wrapper -->
<div class="page-wrapper">

	<!-- Page Content -->
	<div class="content container-fluid">

		<!-- Page Header -->
		<div class="page-header">
			<div class="row align-items-center">
				<div class="col">
					<h3 class="page-title">Roles</h3>
				</div>
			</div>
		</div>
		<!-- /Page Header -->
		@if (Model != null && Model.Count() > 0)
		{
			<div class="row staff-grid-row">
				@foreach (var role in Model)
				{
					<div class="col-md-4 col-sm-6 col-12 col-lg-4 col-xl-3">
						<div class="profile-widget">
							<div class="profile-img">
								<a href="profile.html" class="avatar"><img src="assets/img/profiles/avatar-02.jpg" alt=""></a>
							</div>
							<div class="dropdown profile-action">
								<a href="#" class="action-icon dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="material-icons">more_vert</i></a>
								<div class="dropdown-menu dropdown-menu-right">
									<a class="dropdown-item" asp-action="CompanySetting" asp-controller="Admin" asp-route-id="@role.Id"><i class="fa fa-pencil m-r-5"></i> Access Settings</a>
									<a class="dropdown-item" href="#" data-toggle="modal" data-target="#delete_employee"><i class="fa fa-trash-o m-r-5"></i> Delete</a>
								</div>
							</div>
							<h4 class="user-name m-t-10 mb-0 text-ellipsis"><a href="profile.html">@role.Name </a></h4>
							<div class="small text-muted"> @role.Name</div>
						</div>
					</div>
				}
			</div>
		}
	</div>
	<!-- /Page Content -->
