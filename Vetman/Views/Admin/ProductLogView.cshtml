@model IEnumerable<Core.ViewModels.ProductInventoryViewModel>

@{

	ViewData["Title"] = "Index";
	Layout = ViewBag.Layout;
	var productInventoryId = ViewBag.productInventoryid;
}


	<!-- Page Wrapper -->
	<div class="page-wrapper">

		
		<div class="content container-fluid">

			<!-- Page Header -->
			<div class="page-header">
				<div class="row align-items-center">
					<div class="col">
					<h3 class="page-title">Product Logs</h3>
						<ul class="breadcrumb">
							<li class="breadcrumb-item"><a href="index.html">Dashboard</a></li>
						<li class="breadcrumb-item active">Logs</li>
						</ul>
					</div>
					<div class="col-auto float-right ml-auto">
					<a class="btn add-btn" asp-controller="ShopProducts" asp-action="ProductInventory">Add Product</a>
					</div>
				</div>
			</div>
			
			<div class="row">
				<div class="col-md-12">
					<div class="table-responsive">
						<table class="table table-striped custom-table mb-0">
							<thead>
								<tr>
									<th>Product Name</th>
									<th>Qauntity</th>
									<th>New Quantity</th>
									<th>Old Quantity</th>
									<th>User Name</th>
									<th>Amount</th>
									<th>Selling Price</th>
									<th>Date Created</th>
									<th>Product Activity </th>
								</tr>
							</thead>
							@if (Model.Count() > 0 && Model != null)
							{
								<tbody>
									@foreach (var ShopProduct in Model)
									{
										<tr>
											<td>@ShopProduct.Name</td>
											<td>@ShopProduct.Quantity</td>
											<td>@ShopProduct.NewQuantity</td>
											<td>@ShopProduct.OldQauntity</td>
											<td>@ShopProduct.AccessName</td>
											<td>@ShopProduct.AmountPerProduct</td>
											<td>@ShopProduct.SellingPrice</td>
										    <td>@ShopProduct.DateCreated</td>
											<td><span class="badge bg-inverse-success">@ShopProduct.ProductActivity</span></td>
										</tr>
									}
									
								</tbody>
							}
							else
							{
								<div class="col-md-12 text-center">
									<div class="card">
										<div class="card-body">
											<h3 class="card-title">No Record Found</h3>
											<div id="line-charts"></div>
										</div>
									</div>
								</div>

							}
			
							
						</table>
					</div>
				</div>
			</div>
		</div>
		<!-- /Page Content -->
	</div>
	<!-- /Page Wrapper -->

