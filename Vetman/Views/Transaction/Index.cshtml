@model IEnumerable<Core.ViewModels.TransactionViewModel>
@{
	ViewData["Title"] = "Transaction Message";
	Layout =  ViewBag.Layout;
}
<!-- Page Wrapper -->
<div class="page-wrapper">
			
	<!-- Page Content -->
	<div class="content container-fluid">
				
		<!-- Page Header -->
		<div class="page-header">
			<div class="row align-items-center">
				<div class="col">
					<h3 class="page-title">Transaction Message</h3>
				</div>
			</div>
		</div>
		<!-- /Page Header -->
		<div class="row">
			<div class="col-md-12">
				<div class="table-responsive">
					<table class="table table-striped cell-border custom-table datatable">
						<thead>
							<tr>
								<th>Description</th>
								<th>ReceiptNo</th>
								<th>ConfirmedBy</th>
								<th>ConfirmDate</th>
								<th class="text-center">Confirm Payment</th>
							</tr>
						</thead>
						@if (Model != null && Model.Count() > 0)
						{
							<tbody>
								@foreach (var transaction in Model)
								{
									<tr>
										<td>@transaction.Description</td>
										<td>@transaction.ReceiptNo</td>
										<td>@transaction.ConfirmedBy</td>
										<td>@transaction.ConfirmDate</td>
										<td class="text-center">
											<a class="btn btn-sm btn-primary btn-rounded" style="color:white" data-toggle="modal" data-target="#confirm_Transaction" onclick="transactionToBeConfirmed('@transaction.Id')">Confirm</a>
										</td>
									</tr>
								}	
							</tbody>
						}
					</table>
				</div>
			</div>
		</div>
	</div>
	<!-- /Page Content -->
	<!-- New Group Modal -->
	<div id="confirm_Transaction" class="modal custom-modal fade" role="dialog">
		<div class="modal-dialog modal-dialog-centered modal-md" role="document">
			<div class="modal-content">
				<div class="modal-header">
					<h5 class="modal-title">Confirm Transaction</h5>
					<button type="button" class="close" data-dismiss="modal" aria-label="Close">
						<span aria-hidden="true">&times;</span>
					</button>
				</div>
				<div class="modal-body">
					<input hidden id="transactionId">
					<div class="col-sm-12">
						<div class="form-group">
							<label class="col-form-label">Payment Receipt</label>
							<input class="form-control" id="receipt" type="text">
						</div>
					</div>
					<div class="submit-section">
						<button class="btn btn-primary submit-btn" onclick="confirmTransaction()">Confirm Payment</button>
					</div>
				</div>
			</div>
		</div>
	</div>
	<!-- /All user New Group Modal -->
</div>
<!-- /Page Wrapper -->