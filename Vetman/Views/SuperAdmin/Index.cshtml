@model IEnumerable<Core.ViewModels.CompanyViewModel>
@{
	ViewData["Title"] = "Index";
	Layout = ViewBag.Layout;
}

<!-- Page Wrapper -->
<div class="page-wrapper">
			
	<!-- Page Content -->
	<div class="content container-fluid">
				
		<!-- Page Header -->
		<div class="page-header">
			<div class="row align-items-center">
				<div class="col">
					<h3 class="page-title">All Companies</h3>
				</div>
			</div>
		</div>
		<!-- /Page Header -->
		@if (Model != null && Model.Count() > 0)
		{
			<div class="row staff-grid-row">
				@foreach (var company in Model)
				{
					<div class="col-md-4 col-sm-6 col-12 col-lg-4 col-xl-3">
						<div class="profile-widget">
							<div class="profile-img">
								<a href="profile.html" class="avatar"><img src="assets/img/profiles/avatar-02.jpg" alt=""></a>
							</div>
							<div class="dropdown profile-action">
								<a href="#" class="action-icon dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="material-icons">more_vert</i></a>
								<div class="dropdown-menu dropdown-menu-right">
									<a class="dropdown-item" asp-action="CompanySetting" asp-controller="SuperAdmin" asp-route-companyId="@company.Id"><i class="fa fa-pencil m-r-5"></i> Company Settings</a>
									<a class="dropdown-item" data-toggle="modal" data-target="#delete_employee" onclick="companyToBeDeleted('@company.Id')"><i class="fa fa-trash-o m-r-5"></i> Delete</a>
									<a class="dropdown-item" href="#" onclick="impersonateCompany('@company.Email')"><i class="fa fa-user-secret m-r-5"></i> Impersonate Company</a>
								</div>
							</div>
							<h4 class="user-name m-t-10 mb-0 text-ellipsis"><a href="profile.html">Company Name: @company.Name</a></h4>
							<div class="small text-muted">Company Admin: @company.AdminFullName</div>
						</div>
					</div>
				}
			</div>
		}
	</div>
	<!-- /Page Content -->
				
	<!-- Delete Employee Modal -->
	<div class="modal custom-modal fade" id="delete_employee" role="dialog">
		<div class="modal-dialog modal-dialog-centered">
			<div class="modal-content">
				<div class="modal-body">
					<div class="form-header">
						<h3>Delete Company</h3>
						<p>Are you sure want to delete?</p>
					</div>
					<div class="modal-btn delete-action">
						<input hidden id="companyId" />
						<div class="row">
							<div class="col-6">
								<a href="javascript:void(0);" class="btn btn-primary continue-btn" onclick="deleteCompany()">Delete</a>
							</div>
							<div class="col-6">
								<a href="javascript:void(0);" data-dismiss="modal" class="btn btn-primary cancel-btn">Cancel</a>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	<!-- /Delete Employee Modal -->
				
</div>
<!-- /Page Wrapper -->

