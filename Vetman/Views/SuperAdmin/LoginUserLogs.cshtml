@model IEnumerable<Core.ViewModels.UserLogsViewModel>

@{
	Layout = "~/Views/Shared/_SuperAdminLayout.cshtml";
}
<style>

	body {
		counter-reset: Serial; /* / Set the Serial counter to 0 /*/
	}

	tr td:first-child:before {
		counter-increment: Serial; /* / Increment the Serial counter /*/
		content: counter(Serial); /*  / Display the counter /*/
	}
</style>

<!-- Main Wrapper -->
<div class="page-wrapper">

	<div class="content container-fluid">

		<!-- Page Header -->
		<div class="page-header">
			<div class="row align-items-center">
				<div class="col">
					<h3 class="page-title">List Of Logged User</h3>
					<ul class="breadcrumb">
						<li class="breadcrumb-item"><a href="index.html">Dashboard</a></li>
						<li class="breadcrumb-item active">User</li>
					</ul>
				</div>
				
			</div>
		</div>
		<!-- /Page Header -->
		<!-- Search Filter -->
		<div class="row filter-row">
			<div class="col-sm-6 col-md-3">
				<div class="form-group form-focus">
					<input type="text" class="form-control floating">
					<label class="focus-label">UserId</label>
				</div>
			</div>
			<div class="col-sm-6 col-md-3">
				<div class="form-group form-focus">
					<input type="text" class="form-control floating">
					<label class="focus-label">User Name</label>
				</div>
			</div>

			<div class="col-sm-6 col-md-3">
				<a href="#" class="btn btn-success btn-block"> Search </a>
			</div>
		</div>
		<!-- /Search Filter -->

		<div class="row">

			<div class="col-md-12">
				<div class="table-responsive">
					<table class="table table-striped custom-table datatable">
						<thead>
							<tr>
								<th>S/N</th>
								<th>User Name</th>
								<th>Date LoggedIn</th>
								<th>IP Address </th>
								<th>Device Name</th>
							</tr>
						</thead>
						@if (Model.Count() > 0 && Model != null)
						{
							<tbody>
								@foreach (var UserLogsViewModel in Model)
								{
									<tr>
										<td></td>
										<td>@UserLogsViewModel.UserName</td>
										<td>@UserLogsViewModel.LoggedDate</td>
										<td>@UserLogsViewModel.IpAddress</td>
										<td>@UserLogsViewModel.DeviceName</td>
									</tr>
								}
							</tbody>
						}
					</table>
				</div>
			</div>

		</div>
	</div>
	<!-- /Page Content -->
</div>
